  <script>
    function moveNo(btn) {
      const card = document.querySelector('.card');
      const maxX = card.offsetWidth - btn.offsetWidth;
      const maxY = card.offsetHeight - btn.offsetHeight;

      const x = Math.random() * maxX;
      const y = Math.random() * maxY;

      btn.style.left = x + 'px';
      btn.style.top = y + 'px';
    }

    function yesClicked() {
